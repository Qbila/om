{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment",
  "scripts": {
    "predev-start": "npm-run-all --parallel prestartjs removeBuild",
    "prestartjs": "babel-node scripts/preStart.js",
    "dev-start": "npm-run-all --parallel security-check lint:watch initServer test:watch build-dev",
    "prod-start": "npm-run-all --parallel security-check lint:watch initServer test:watch build-prod",
    "initServer": "babel-node server.js",
    "security-check": "nsp check",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel initServer localtunnel",
    "removeBuild": "rm -rf public/dist",
    "build-dev": "webpack --config webpack.config.dev.js",
    "build-prod": "webpack --config webpack.config.prod.js",
    "lint": "esw webpack.config.* scripts server client server.js --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --reporter progress scripts/testSetup.js 'client/**/*.test.js' 'server/**/*.test.js'",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Cory House",
  "contributors": [
    {
      "name": "Ashish Rana"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "env2": "^2.2.0",
    "handlebars": "^4.0.10",
    "hapi": "^16.5.2",
    "hapi-swagger": "^7.7.0",
    "inert": "^4.2.1",
    "vision": "^4.1.1",
    "webpack": "^3.5.5",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "cheerio": "^0.22.0",
    "compression": "^1.6.2",
    "cross-env": "^3.1.3",
    "css-loader": "^0.25.0",
    "eslint": "^3.8.1",
    "eslint-plugin-import": "2.0.1",
    "eslint-watch": "2.1.14",
    "extract-text-webpack-plugin": "1.0.1",
    "hapi-webpack-plugin": "^2.0.0",
    "html-webpack-plugin": "2.22.0",
    "jsdom": "9.8.0",
    "json-schema-faker": "0.3.6",
    "json-server": "0.8.22",
    "localtunnel": "1.8.1",
    "mocha": "^3.1.2",
    "nock": "8.1.0",
    "npm-run-all": "^3.1.1",
    "nsp": "^2.6.2",
    "numeral": "1.5.3",
    "open": "0.0.5",
    "rimraf": "2.5.4",
    "style-loader": "0.13.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-md5-hash": "0.0.5"
  }
}
